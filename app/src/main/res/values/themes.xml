<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResepNusantara" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/on_primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/on_primary_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MaterialComponents.DayNight.NoActionBar.Main" parent="Theme.ResepNusantara">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.MaterialComponents.ShapeableImageView.Profile">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.ProfileImage</item>
    </style>

    <style name="Widget.MaterialComponents.ShapeableImageView.RecipeImage">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.RecipeImage</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.ProfileImage" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RecipeImage" parent="">
        <item name="cornerSize">8%</item>
    </style>

    <style name="TextView.Greeting" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/on_background_color</item>
    </style>

    <style name="TextView.Greeting.Name" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.Base">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/on_background_color</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2.Base">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/on_background_color</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.Card">
        <item name="android:textColor">@color/on_surface_variant_color</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2.Card">
        <item name="android:textColor">@color/on_surface_variant_color</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body1.DetailRecipe">
        <item name="android:textColor">@color/on_surface_variant_color</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2.DetailRecipe">
        <item name="android:textColor">@color/on_surface_variant_color</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.Base">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/on_background_variant_color</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle2.Base">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/on_background_variant_color</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.Card">
        <item name="android:textColor">@color/on_surface_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle2.Card">
        <item name="android:textColor">@color/on_surface_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle1.DetailRecipe">
        <item name="android:textColor">@color/on_surface_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Subtitle2.DetailRecipe">
        <item name="android:textColor">@color/on_surface_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Button" parent="">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MaterialComponents.CompoundButton.RadioButton.MenuType">
        <item name="android:textAppearanceButton">@style/Text.Button</item>
        <item name="android:textColor">@color/on_surface_color</item>
    </style>

    <style name="Widget.MaterialComponents.Button.MenuType">
        <item name="android:textAppearanceButton">@style/Text.Button</item>
        <item name="android:textColor">@color/on_primary_color</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.OutlinedButton.MenuType">
        <item name="android:textAppearanceButton">@style/Text.Button</item>
        <item name="android:textColor">@color/on_background_color</item>
        <item name="strokeColor">@color/on_background_color</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.Recipe">
        <item name="cardBackgroundColor">@color/surface_color</item>
        <item name="cardElevation">2dp</item>
    </style>

</resources>